<Window x:Class="crypto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crypto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="TextBoxBackground1" Color="White"/>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1C1414" Offset="0.113"/>
                    <GradientStop Color="#FF554E4E" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Button Content ="Main" MinWidth="100" Click="btnClickP1"></Button>
            <Button Content="Detail Asset" MinWidth="100" Margin="10,0,0,0" Click="btnClickP2"></Button>
            <Button Content="Detail Exchange" MinWidth="100" Margin="10,0,0,0" Click="btnClickP3"></Button>
        </StackPanel>
        <Frame x:Name="MainFrame" Margin="0,35,0,0" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
 