<Page x:Class="crypto.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:crypto.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Top Currencies" Grid.Row="0"></Label>
            <Grid>
                <Button MaxWidth="100" HorizontalAlignment="Left" Click="buttonGetExchange">Get Exchange</Button>
                <Button MaxWidth="100"  Click="buttonGetAsset" Margin="-250,0,240,-0">Get Asset</Button>
                <Button MaxWidth="100"  Click="buttonGetMarket" Margin="0,0,240,0">Get Market</Button>
            </Grid>
            </StackPanel>
        <Frame Name="DataView" VerticalAlignment="Bottom" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Page>
